<Window x:Class="GruziVezi.WAuthorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GruziVezi"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <Grid>
        <Button Name="btnAuthorization" Content="Войти" HorizontalAlignment="Left" Margin="333,258,0,0" VerticalAlignment="Top" Width="75" Click="btnAuthorization_Click"/>
        <TextBox Name="tbLogin" HorizontalAlignment="Left" Height="39" Margin="248,114,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="253"/>
        <Label Name="lblLogin" Content="Логин" HorizontalAlignment="Left" Margin="248,83,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="pbPassword" HorizontalAlignment="Left" Margin="248,189,0,0" VerticalAlignment="Top" PasswordChar="*" Width="253" Height="39"/>
        <Label x:Name="lblPassword" Content="Пароль" HorizontalAlignment="Left" Margin="248,158,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
